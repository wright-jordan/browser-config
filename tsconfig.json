{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    /* Projects */

    /* Language and Environment */
    "target": "es2017",
    "lib": ["es2017"],

    /* Modules */
    "module": "es2015",
    "moduleResolution": "node",
    "rootDirs": ["./src"],

    /* JavaScript Support */
    "allowJs": false,

    /* Emit */
    "outDir": "./dist/js",
    "removeComments": true,

    /* Interop Constraints */
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
